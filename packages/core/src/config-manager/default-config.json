{
  "sourcesDirectory": "~/.config/lctx/sources",
  "sources": [],
  "agents": {
    "claude-code": {
      "commands": {
        "chat": "claude --strict-mcp-config --mcp-config {mcp_config_file}",
        "ask": "claude --strict-mcp-config --mcp-config {mcp_config_file} -p {prompt_file}"
      },
      "addDirFlag": "--add-dir {path}",
      "mcp": {
        "path": ".mcp.json",
        "config": {
          "mcpServers": {}
        }
      }
    }
  },
  "defaultAgent": "claude-code"
}
